### directories ###
CXX=g++
LIBCOSMO_PATH= ../
CLASS_PATH= ../../class
### -------------------- ###


CXXFLAGS = -O3 -m64 -Xpreprocessor -fopenmp -std=c++11 -I $(LIBCOSMO_PATH)
LDFLAGS = -L $(LIBCOSMO_PATH)/lib -l_levin -lm -lgsl -lgslcblas -lomp 

OBJ = main.o
DEPS = 
BIN = main.x

$(BIN) : $(OBJ) 
	$(CXX) $(CXXFLAGS) -o $@ $^ $(LDFLAGS)

%.o : %.cpp $(DEPS)
	$(CXX) $(CXXFLAGS) -c $<

.PHONY : clean
clean :
	rm -rf $(BIN) $(OBJ)
